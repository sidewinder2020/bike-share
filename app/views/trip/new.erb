      <div class="view">
      <!--Intro content-->
      <div class="full-bg-img flex-center">
      </div>

    <div class ="container">
      <div class="page-header">
        <h1><small></small></h1>
      </div>
        <h1 style="color: black">Add a New Trip</h1>
          <form action="/trips" method="post">
            <div class="form-group">
              <label style="color: black" for="InputStartStation">Start Station ID</label>
              <input type="text" class="form-control" name='start_station_id' placeholder="Start Station ID">
            </div>
            <div class="form-group">
              <label style="color: black" for="InputEndStation">End Station ID</label>
              <input type="text" class="form-control" name='end_station_id' placeholder="End Station ID">
            </div>
            <div class="form-group">
              <label style="color: black" for="InputSDate">Start Date</label>
              <input type="date" class="form-control" name='start_date' placeholder="Start Date">
            </div>
            <div class="form-group">
              <label style="color: black" for="InputEDate">End Date</label>
              <input type="date" class="form-control" name='end_date' placeholder="End Date">
            </div>
            <div class="form-group">
              <label style="color: black" for="InputDur">Duration</label>
              <input type="text" class="form-control" name='duration' placeholder="Duration of Trip">
            </div>
            <div class="form-group">
              <label style="color: black" for="InputBikeN">Bike ID</label>
              <input type="text" class="form-control" name='bike_id' placeholder="Bike Identification Number">
            </div>
            <div class="form-group">
              <label style="color: black" for="InputZ">Zip Code</label>
              <input type="text" class="form-control" name='zip_code' placeholder="Zip Code">
            </div>
            <div>
              <p style="color: black">Subscriber or Customer:
                <select name='trip[subscription_type]'>
                  <option value="customer">Customer</option>
                  <option value="subscriber">Subscriber</option>
                </select><br/>
              </p>
            </div>
            <input class="btn btn-default" type='submit' value='create new trip'/>
          </form>
    </div>
  </body>
</html>
